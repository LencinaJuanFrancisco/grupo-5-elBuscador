            </form>
        </div>
        <form class="form-carga" action="/producto/editar/<%=product.id %>?_method=PUT" method="POST">
            <div class="bolsillo-izq">

                <div class="div-nom_producto">
                    <label for="nombre-producto">Nombre del Producto</label>
                    <input type="text" name="nombreProducto" value=" <%= product.nombreProducto %>">
                </div>
                <div>Detalle</div>
                <div>
                    <textarea name="detalleProducto" rows="5" cols="40" "><%= product.detalleProducto %> </textarea>
                </div>
                <div>
                    <div>Talles</div>
                    <label for="1">
                        <input type="radio" id="1" name="talles" value="<%=product.talles%>"> 1
                    </label>
                    <label for="2">
                        <input type="radio" id="2" name="talles" value="<%=product.talles%>"> 2
                    </label>
                    <label for="3">
                        <input type="radio" id="3" name="talles" value="<%=product.talles%>"> 3
                    </label>
                    <label for="4">
                        <input type="radio" id="4" name="talles" value="<%=product.talles%>"> 4
                    </label>
                    <label for="5">
                        <input type="radio" id="5" name="talles" value="<%=product.talles%>"> 5
                    </label>
                </div>
                <div class="div-precio">
                    <label for="">Precio $ </label>
                        <label for="precio">
                            <input type="text" name="precio" value="<%= product.precio %> "></label>

                        </label>
                    
                    
                </div>
                <div class="div-cantidad">
                    <label for="">Cantidad</label>
                    <label for="cantidad">
                        <input type="text" name="cantidad" value= "<%= product.cantidad %> ">
                    </label>
                </div>
            </div> <!--cierre de bolsillo izquierdo -->
            <div class="bolsillo-der">
            
            
            <div class="div-colores">
                <div >Colores</div>
                
                <label for="colores"></label>
                    <input type="color" name="colores" value="<%=product.colores%>" />
                <label for="colores"></label>
                    <input type="color" name="colores" value="<%=product.colores%>" />
                <label for="colores"></label>
                    <input type="color" name="colores" value="<%=product.colores%>" />
                <label for="colores"></label>
                    <input type="color" name="colores" value="<%=product.colores%>" />
                <label for="colores"></label>
                    <input type="color" name="colores" value="<%=product.colores%>" />
            </div>
            <div>
                <div>Genero</div>
                <label for="mujer">
                    <input type="radio" name="genero" id="mujer" value="<%= product.genero %> ">Mujer
                </label>
                <label for="niñas">
                    <input type="radio" name="genero" id="niñas" value="<%= product.genero %> ">Niñas
                </label>
                <label for="niños">
                    <input type="radio" name="genero" id="niños" value="<%= product.genero %> ">Niños
                </label>
            </div>
            <div>
                <div>Temporada</div>
                <label for="temporada">
                    <input type="radio" name="temporada" id="verano" value="<%= product.temporada %> ">Verano
                </label>
                <label for="temporada">
                    <input type="radio" name="temporada" id="invierno" value="<%= product.temporada %> ">Invierno
                </label>
            </div>
            <div>
                
                <div>
                    Imagen Principal
                </div>
                <input type="file" name="imgPrincipal">
            </div>
            <div>
                <div>
                    Imagen Principal
                </div>
                <div>
                    <label for=""> 1- 
                        <input type="file" name="imgPecundaria" id="img-secundaria-1">
                    </label>
                </div>
                <div>
                    <label for="">2- 
