    <!-- header -->
    <%- include('../views/partials/header') %>

    <!-- FORMULARIO DE CARGA -->
    <main class="main-carga">
        <form class="form-carga" action="/producto/editar/<%=product.id %>?_method=PUT" method="POST">

            <div class="bolsillo-izq">

                <div class="div-nom_producto">
                    <label for="nombre-producto">Nombre del Producto</label>
                    <input type="text" name="nombreProducto" value=" <%= product.nombreProducto %>">
                </div>
                <div>Detalle</div>
                <div>
                    <textarea name="detalleProducto" rows="5" cols="30" "><%= product.detalleProducto %> </textarea>
                </div>
               
                    <div>Talles</div>
                    <div class=" talles">
                        
                        <% talles.forEach(talle => { %> 
                           
                            <label for="talles">
                                <input type="text" name="talles"  value=" <%=talle.toUpperCase()%>"  >
                            </label>
                            <%});%> 
                            
                    </div>
                  
                
                <div class="div-precio">
                    <label for="">Precio $ </label>
                        <label for="precio">
                            <input type="text" name="precio" value="<%= product.precio %> "></label>

                        </label>
                    
                    
                </div>
                <div class="div-cantidad">
                    <label for="">Cantidad</label>
                    <label for="cantidad">
                        <input type="text" name="cantidad" value= "<%= product.cantidad %> ">
                    </label>
                </div>
            </div> <!--cierre de bolsillo izquierdo -->
            
            <div class="bolsillo-der">
            
            
            <div class="div-colores">
                <div >Colores</div>
                
               
                    <div class=" talles">

                        <% colores.forEach(color => { %> 
                            <label for="colores">
                                <input type="color" name="colores"  value= <%=color%>  > 
                            </label>
                            <%});%> 
                            
                    </div>
            </div>
            <div>
                <div>Genero</div>

                <input type="radio" name="genero" id="mujer" value="mujer">
                <label for="mujer">Mujer</label>
                
                <input type="radio" name="genero" id="niñas" value="niñas">
                <label for="niñas">Niñas </label>
                
                <input type="radio" name="genero" id="niños" value="niños" >
                <label for="niños">Niños</label>
            </div>
            <div>
                <div>Temporada</div>
                
                <input type="radio" name="temporada" id="verano"  value="verano">
                <label for="verano">Verano</label>
                
                <input type="radio" name="temporada" id="invierno"  value="invierno">
                <label for="invierno">Invierno</label>
            </div>
            <div>
                
                <div>
                    Imagen Principal
                </div>
                <input type="file" name="imgPrincipal">
            </div>
