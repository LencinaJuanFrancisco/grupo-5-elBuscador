        <form class="form-carga" action="/producto/carga" method="POST" enctype="multipart/form-data">
            <div class="bolsillo-izq">

                <div class="div-nom_producto">
                    <label for="nombreProducto">Nombre del Producto</label>
                    <input type="text" name="nombreProducto" class="nombreProducto">
                </div>
                <div>
                <span class="errorNombre visible"
                >¡El nombre no debe estar vacío!
              </span>
              <span class="errorNombreLongitud visible"
                >El nombre debe contener al menos 5 caracteres.
              </span>
            </div>  
                <div>Detalle</div>
                <div>
                    <textarea class= "detalleProducto" name="detalleProducto" rows="5" cols="40">Detalle del producto</textarea>
                </div>
                <div>
                <span class="errorDetalleLongitud visible"
                >El detalle debe contener al menos 20 caracteres.
              </span>
            </div> 
                <div>
                    <div>Talles</div>
                    
                        <% for(let i=0; i<5;i++){ %>

                        <select name="talles">
                            <option disabled selected>talle</option>
                            <% talles.forEach(talle =>{%>

                            <option value="<%= talle.id %>"> <%= talle.nombre %> </option>
                            <%  }) %>

                        </select>
                        <% } %>

                    </div>
                    <div class="div-precio">
                        <label for="">Precio $ </label>
                        <label for="precio">
                            <input type="text" name="precio"></label>

                        </label>


                    </div>
                    <div class="div-cantidad">
                        <label for="">Cantidad</label>
                        <label for="cantidad">
                            <input type="text" name="cantidad">
                        </label>
                    </div>
                </div>
                <!--cierre de bolsillo izquierdo -->
                <div class="bolsillo-der">


                    <div class="div-colores">
                        <div>Colores</div>
                        <% for(let i=0; i<5;i++){ %>

                        <select name="colores">
                            <option disabled selected>color</option>
                            <% colores.forEach(color =>{%>

                            <option value="<%= color.id %>"> <%= color.nombre %> </option>
                            <%  }) %>

                        </select>
                        <% } %>
                        
                    </div>
                    <div>
                        <div>Género</div>
                        <label for="genero">
                            <input type="radio" name="genero" id="mujer" value="1">Mujer
                        </label>
                        <label for="genero">
                            <input type="radio" name="genero" id="niñas" value="2">Niñas
                        </label>
                        <label for="genero">
                            <input type="radio" name="genero" id="niños" value="3">Niños
                        </label>
                    </div>
                    <div>
                        <div>Temporada</div>
                        <label for="temporada">
                            <input type="radio" name="temporada" id="verano" value="1">Verano
                        </label>
                        <label for="temporada">
                            <input type="radio" name="temporada" id="invierno" value="2">Invierno
                        </label>
                    </div>
                    <div>

                        <div>
                            Imagen Principal
                        </div>
                        <input  class= "imgPrincipal" type="file" name="imgPrincipal">
                    </div>
                    <div>
                        <span class="errorImagen visible"
                        >¡Debes seleccionar una imagen!
                      </span> 
                    </div>
